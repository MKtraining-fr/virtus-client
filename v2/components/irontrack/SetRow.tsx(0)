import React from 'react';
import { Check, Plus, Minus } from 'lucide-react';

interface SetRowProps {
  setNumber: number;
  isActive: boolean;
  isCompleted: boolean;
  weight: number;
  reps: number;
  previousBest?: string;
  recommended?: number;
  loadUnit?: string;
  onClick: () => void;
  onWeightChange?: (weight: number) => void;
  onRepsChange?: (reps: number) => void;
}

const SetRow: React.FC<SetRowProps> = ({ 
  setNumber,
  isActive, 
  isCompleted,
  weight,
  reps,
  previousBest,
  recommended,
  loadUnit = 'KG',
  onClick,
  onWeightChange,
  onRepsChange
}) => {
  const handleAdjustWeight = (amount: number, e: React.MouseEvent) => {
    e.stopPropagation();
    if (onWeightChange && isActive) {
      onWeightChange(Math.max(0, weight + amount));
    }
  };

  const handleAdjustReps = (amount: number, e: React.MouseEvent) => {
    e.stopPropagation();
    if (onRepsChange && isActive) {
      onRepsChange(Math.max(0, reps + amount));
    }
  };

  return (
    <div 
      onClick={onClick}
      className={`
        w-full h-full
        relative flex items-center justify-between px-5 py-3 rounded-2xl border transition-all duration-300
        ${isActive 
          ? 'bg-gradient-to-b from-violet-800/80 to-violet-900/80 border-violet-600/40 shadow-[0_0_30px_rgba(139,92,246,0.2)] ring-1 ring-violet-600/20' 
          : 'bg-zinc-900/60 border-zinc-800/50 hover:bg-zinc-800/60'
        }
      `}
    >
      {/* Set Number Section */}
      <div className="flex items-center gap-4">
        <div className={`
          flex items-center justify-center w-11 h-11 rounded-full font-black text-sm transition-all duration-500 shadow-md
          ${isCompleted 
            ? 'bg-violet-600 text-white shadow-[0_0_15px_rgba(139,92,246,0.4)]' 
            : isActive 
              ? 'bg-white text-black scale-110' 
              : 'bg-zinc-800 text-zinc-500'
          }
        `}>
          {isCompleted ? <Check size={22} strokeWidth={4} /> : setNumber}
        </div>
        
        <div className="flex flex-col">
          <span className={`text-[10px] font-black tracking-[0.15em] uppercase mb-0.5 ${isActive ? 'text-violet-400' : 'text-zinc-600'}`}>
            SÃ©rie {setNumber}
          </span>
          <span className={`text-xs font-bold font-mono ${isActive ? 'text-zinc-400' : 'text-zinc-700'}`}>
            {previousBest || '--'}
          </span>
        </div>
      </div>

      {/* Data Section */}
      {isActive ? (
        <div className="flex items-center gap-3">
          {/* Weight Controls */}
          <div className="flex items-center gap-2 bg-zinc-900/80 rounded-xl p-1">
            <button 
              onClick={(e) => handleAdjustWeight(-2.5, e)}
              className="w-8 h-8 rounded-lg bg-zinc-800 text-zinc-400 active:scale-90 transition-transform flex items-center justify-center"
            >
              <Minus size={16} />
            </button>
            <div className="flex flex-col items-center min-w-[50px]">
              <span className="text-xl font-black font-mono text-white tracking-tighter">{weight}</span>
              <span className="text-[8px] text-zinc-600 uppercase font-black tracking-widest">{loadUnit}</span>
            </div>
            <button 
              onClick={(e) => handleAdjustWeight(2.5, e)}
              className="w-8 h-8 rounded-lg bg-zinc-800 text-zinc-400 active:scale-90 transition-transform flex items-center justify-center"
            >
              <Plus size={16} />
            </button>
          </div>

          {/* Divider */}
          <div className="w-px h-8 bg-violet-600/30"></div>

          {/* Reps Controls */}
          <div className="flex items-center gap-2 bg-zinc-900/80 rounded-xl p-1">
            <button 
              onClick={(e) => handleAdjustReps(-1, e)}
              className="w-8 h-8 rounded-lg bg-zinc-800 text-zinc-400 active:scale-90 transition-transform flex items-center justify-center"
            >
              <Minus size={16} />
            </button>
            <div className="flex flex-col items-center min-w-[40px]">
              <span className="text-xl font-black font-mono text-white tracking-tighter">{reps}</span>
              <span className="text-[8px] text-zinc-600 uppercase font-black tracking-widest">REPS</span>
            </div>
            <button 
              onClick={(e) => handleAdjustReps(1, e)}
              className="w-8 h-8 rounded-lg bg-zinc-800 text-zinc-400 active:scale-90 transition-transform flex items-center justify-center"
            >
              <Plus size={16} />
            </button>
          </div>
        </div>
      ) : (
        <div className="flex items-center gap-4">
          <div className="flex flex-col items-end">
            <div className={`text-2xl font-black font-mono tracking-tighter leading-none ${isActive ? 'text-white' : 'text-zinc-600'}`}>
              {weight}<span className="text-[10px] font-sans font-bold text-zinc-600 ml-1">{loadUnit}</span>
            </div>
          </div>
          <div className={`w-px h-6 transition-colors ${isActive ? 'bg-violet-600/30' : 'bg-zinc-800'}`}></div>
          <div className="flex flex-col items-end w-14">
             <div className={`text-2xl font-black font-mono tracking-tighter leading-none ${isActive ? 'text-white' : 'text-zinc-600'}`}>
              {reps}<span className="text-[10px] font-sans font-bold text-zinc-600 ml-1">R</span>
            </div>
          </div>
        </div>
      )}

      {/* Side "Mechanical" Accent */}
      {isActive && (
        <div className="absolute right-0 top-1/3 bottom-1/3 w-1 bg-violet-600 rounded-l-full shadow-[0_0_10px_rgba(139,92,246,0.8)] animate-pulse"></div>
      )}

      {/* Recommended Badge */}
      {isActive && recommended && (
        <div className="absolute -top-2 -right-2 bg-orange-500 text-white text-[10px] font-black px-2 py-1 rounded-full shadow-lg">
          {recommended} {loadUnit}
        </div>
      )}
    </div>
  );
};

export default SetRow;
