# Headers de sécurité pour Cloudflare Pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(self), microphone=(self), geolocation=()

# Pas de cache pour index.html
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache long terme pour les assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache pour les fichiers JavaScript
/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache pour les fichiers CSS
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache pour les images
/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Headers pour le manifest PWA
/manifest.json
  Cache-Control: public, max-age=3600
  Content-Type: application/manifest+json

# Headers pour le service worker (pas de cache)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Content-Type: application/javascript; charset=utf-8
